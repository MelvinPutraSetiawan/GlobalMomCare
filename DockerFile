# Start from an official PHP image with FPM
FROM php:8.2-fpm

# Install system dependencies required for Composer, PHP extensions, and Laravel
RUN apt-get update && apt-get install -y \
    libssl-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    git \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd pdo pdo_mysql

# Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Set working directory
WORKDIR /var/www

# Copy the application files into the container
COPY . .

# Install PHP dependencies using Composer
RUN composer install --no-dev --prefer-dist

# Run the Vite build (assuming you're using a Node.js package manager like npm or yarn)
RUN npm install
RUN npm run build

# Expose the PHP-FPM port (usually 9000)
EXPOSE 9000

# Start PHP-FPM
CMD ["php-fpm"]
